{
  "name": "svelte-ecosystem-ci",
  "private": true,
  "version": "0.0.1",
  "description": "svelte Ecosystem CI",
  "scripts": {
    "prepare": "pnpm exec simple-git-hooks",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc",
    "format": "prettier --ignore-path .gitignore --check .",
    "format:fix": "pnpm format --write",
    "test:self": "tsx ecosystem-ci.ts _selftest",
    "test": "tsx ecosystem-ci.ts",
    "bisect": "tsx ecosystem-ci.ts bisect"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sveltejs/svelte-ecosystem-ci.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sveltejs/svelte-ecosystem-ci/issues"
  },
  "homepage": "https://github.com/sveltejs/svelte-ecosystem-ci#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "cac": "^6.7.14",
    "execa": "^9.5.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.2",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.3",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-n": "^17.15.1",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "semver": "^7.6.3",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "pnpm": {
    "overrides": {
      "braces@<3.0.3": "^3.0.3"
    }
  }
}
